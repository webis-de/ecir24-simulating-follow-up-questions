<View className="unit">
<Header value="{{NUM}}. $system"/>
<Text name="user-response{{NUM}}" value="$user_response_{{NUM}}"/>
<Choices name="ratings{{NUM}}" toName="user-response{{NUM}}" choice="multiple" showInline="true" required="true">
  <Choice value="valid (complete and comprehensible question)" alias="valid"/>
  <Choice value="related (not off-topic)" alias="related"/>
  <Choice value="generic (fits to all texts)" alias="generic"/>
  <Choice value="informative (not answered in the text)" alias="informative"/>
</Choices>
<View className="slider">
<Header value="naive"/>
<Number name="expertise{{NUM}}" toName="user-response{{NUM}}" min="-1" max="1" slider="true"/>
<Header value="savvy"/>
</View>
<View className="slider">
<Header value="reasons"/>
<Number name="direction{{NUM}}" toName="user-response{{NUM}}" min="-1" max="1" slider="true"/>
<Header value="implications"/>
</View>
<TextArea name="comments{{NUM}}" toName="user-response{{NUM}}" placeholder="comments" />
</View>
